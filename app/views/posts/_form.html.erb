<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, 'Titulo', style: "display: block", class:'form-label' %>
    <%= form.text_field :name, class:'form-control w-25' %>
  </div>
  <div>
    <%= form.label :image,'Imagen', style: "display: block", class:'form-label' %>
    <%= form.file_field :image, class:'form-control w-25' %>
  </div>
  <div>
    <%= form.label :context, 'Leyenda', style: "display: block", class:'form-label' %>
    <%= form.text_area :context, class:'form-control w-75', rows:'4' %>
  </div>
  <div>
    <%= form.submit 'Aceptar', class:'my-3' %>
  </div>
<% end %>
