<div class= 'mt-4'>
  <%= form_with(model: @comment, local: true) do |f| %>
    <% if @comment.errors.any? %>
      <div id = 'error_explanation'>
        <h2>Este comentario no se pudo crear por las siguientes
          razones</h2>
        <ul>
          <% @comment.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <div class = 'field'>
      <%= f.label :description, "Deja tu comentario", class: 'form-label' %>
      <%= f.text_area :description, class: 'form-control w-50', rows:'3' %>
      <div class = 'actions'>
        <%= f.submit 'Publicar', class: 'btn btn-primary btn-sm mt-3' %>
      </div>
    <% end %>
  </div>
